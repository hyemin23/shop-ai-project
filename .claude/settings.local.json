{
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "Bash(npx shadcn@latest:*)",
      "WebFetch(domain:ui.shadcn.com)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "mcp__playwright",
      "mcp__sequential-thinking__sequentialthinking",
      "WebFetch(domain:ai.google.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.tosspayments.com)",
      "WebFetch(domain:buildupspace.vercel.app)",
      "WebFetch(domain:npm.im)",
      "WebFetch(domain:www.npmjs.com)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright",
    "context7",
    "sequential-thinking",
    "shadcn",
    "supabase",
    "vercel"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/.env.local\" ]; then grep '^SLACK_WEBHOOK_URL=' \"$CLAUDE_PROJECT_DIR/.env.local\" | sed 's/^/export /' >> \"$CLAUDE_ENV_FILE\"; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/notify-slack.sh\"",
            "async": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/pre-commit-check.sh\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/notify-slack.sh\"",
            "async": true
          }
        ]
      }
    ]
  },
  "skipDangerousModePermissionPrompt": true
}
