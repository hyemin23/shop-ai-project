{
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "Bash(npx shadcn@latest:*)",
      "WebFetch(domain:ui.shadcn.com)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "mcp__playwright"
    ]
  },
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "enableAllProjectMcpServers": true,
  "skipDangerousModePermissionPrompt": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/.env.local\" ]; then grep '^SLACK_WEBHOOK_URL=' \"$CLAUDE_PROJECT_DIR/.env.local\" | sed 's/^/export /' >> \"$CLAUDE_ENV_FILE\"; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/notify-slack.sh\"",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/notify-slack.sh\"",
            "async": true
          }
        ]
      }
    ]
  }
}
